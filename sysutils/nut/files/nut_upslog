#!/sbin/openrc-run
# NUT upslog load

nut_prefix=${nut_prefix-"/usr/local"}
PID="/var/db/nut/upslog.pid"
command="${nut_prefix}/sbin/upslog"
name="NUT UPS Logging Daemon"

depend() {
         use upsdrv
         after upsdrv
}

start() {
        ebegin "Starting ${SVCNAME}"
        start-stop-daemon --start --pidfile "${PID}" --quiet --exec ${command}
        eend $? 
}

stop() {
        ebegin "Stopping ${SVCNAME}"
        start-stop-daemon --stop --quiet --pidfile ${pidfile}
        eend $? 
}

reload() {
	ebegin "Reloading ${SVCNAME}"
	start-stop-daemon --stop --signal HUP --oknodo --quiet --pidfile ${pidfile}
	eend $?
}
