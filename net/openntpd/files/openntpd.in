: ${ntpd_config:=%%PREFIX%%/etc/ntpd.conf}
: ${ntpd_drift:=/var/db/ntpd.drift}

command=%%PREFIX%%/sbin/ntpd
required_files=$ntpd_config
pidfile=/var/run/ntpd.pid
command_args="$ntpd_args -f $ntpd_config -p $pidfile -s"
name="Network Time Protocol Daemon"

depend()
{
	use dns net
	need localmount
	after bootmisc network dhcpcd wpa_supplicant
}
